<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#545454"></solid>
            <stroke android:dashWidth="0dp" android:width="0dp"></stroke>
            <padding android:right="10dp" android:bottom="20dp" android:left="10dp" android:top="20dp"></padding>
            <corners android:radius="8dp"></corners>
        </shape>
    </item>
   <item>
       <shape xmlns:android="http://schemas.android.com/apk/res/android">
           <solid android:color="#424242"></solid>
           <padding android:right="10dp" android:bottom="15dp" android:left="10dp" android:top="15dp"></padding>
           <corners android:radius="8dp"></corners>
       </shape>
   </item>
</selector>
